<!DOCTYPE html>
<html lang="en"></html>
<head>
    <% include ../header/header %>
    <style>
    	th, td{
    		border-bottom: 1px solid #ddd;
    	}

      h3 {
        background-color:#E6E9ED;
      }
    </style>
	
</head>

	<div class="jumbotron">
	  <h1><%= TransporterName %></h1> 
	  
	</div>


	<div class="container" >
    
    <div class="container" id="transporterInfos" >
      <h2>Description (Generated by <a href=#>BioSummarzier</a>)</h2>
      <p>This will be retrieved from database</p>
      
      <h3>TransporterInfo</h3>
      <table>
        <tr> 
          <th width="234"> Accession Number: </th> 
          <td> <a href="http://www.uniprot.org/uniprot/P08183" target="_parent"> P08183 </a> 
          </td> 
        </tr> 
        <tr> 
          <th> Protein Name: </th> 
          <td> MDR1 aka PGY1 aka ABCB1 </td> 
        </tr>   
      </table>
    </div>
    
    <div class="container" id="compounds">

      <!-- DrugTable -->
      <!-- Do pagenation in this place -->
      <div class="container">
        <h3>Associated Drugs</h3>
      </div>
      <div class="container" id="drugs">
        <table style="width: 100%;border:0px solid #ddd;table-layout: fixed;">
        <tr>
          <th>Drug Name</th>
          <th>Drug Function</th>
          <th>Type</th>
          <th>Reference</th>
        </tr>
        </table>

		    <table id="data" style="width: 100%;border:0px solid #ddd;table-layout: fixed;">
  		
  		  <% data.forEach(function(data) { %>
          <tr>
  				  <td><%= data.CompoundName %></a></td>
  				  <td><%= data.CompoundFunction %></td>
            <td><%= data.CompoundType %></td>
  				  <td><%= data.Reference %></td>
          </tr>
  		  <% }); %>
		    </table>
      </div>
      <!-- metabolites table -->
      <div class="container">
        <h3>Associated Metabolites</h3>
      </div>
      <div class="container" id="metabolites">
        
        <table style="width: 100%;border:0px solid #ddd;table-layout: fixed;">
        <tr>
          <th>Metabolite Name</th>
          <th>Metabolite Function</th>
          <th>Type</th>
          <th>Reference</th>
        </tr>
        </table>

        <table id="data" style="width: 100%;border:0px solid #ddd;table-layout: fixed;">
      
        <% metabolites.forEach(function(data) { %>
          <tr>
            <td><%= data.CompoundName %></a></td>
            <td><%= data.CompoundFunction %></td>
            <td><%= data.CompoundType %></td>
            <td><%= data.Reference %></td>
          </tr>
        <% }); %>
        </table>
      </div>

    </div>
	</div>



</body>
</html>
