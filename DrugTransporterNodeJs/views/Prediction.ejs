</head>



	<div class="jumbotron">
	  <h1>Drug Transporter Association Prediction</h1> 
	  
	</div>


	<div class="container" >
        <form method="post" action="../prediction">
		<p style="font-style:initial;font-size: 20px">Isomeric Smile String:
			<input type="text" id="smileString" name="smileString" placeholder="input your smile string..."><br/>
			<input type="submit" value="Submit" onclick="passSmileString()">
		</p>
        </form>

		<p style="font-style:initial;font-size: 20px">
			Result:
            
                <p id="input_smiles">Input smile string: 
                    <% data.forEach(function(data) { %>
                    <%= data.smiles %> 
                    <% }); %>
                </p>
			<table style="width:100%">
  			<tr>
    			<th>Transporter</th>
    			<th>MDR1</th>
    			<th>ABCG2</th> 
    			<th>SLC22A6</th>
    			<th>SLCO1B1</th>
    			<th>SLC22A8</th>
    			<th>ABCC2</th>
    			<th>SLC22A1</th>
    			<th>SLCO1A2</th>
    			<th>SLC22A2</th>
    			<th>ABCC1</th>
  			</tr>
  			<tr id="calculated_result">
                <td>Binding: </td>

                <% data.forEach(function(data) { %>
                <!-- data inside the function() is the one will be parse below -->
                    <td><%= data.result %></td>
                <% }); %>
  			</tr>
			</table>
		</p>

	</div>



<footer>
